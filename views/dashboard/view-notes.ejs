<div class="container py-5">
  <div class="card shadow-lg rounded-4 p-5 bg-white border-0">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold text-dark">üìÑ View/Edit Note</h2>
      <a href="/dashboard" class="btn btn-outline-primary">‚Üê Back to Dashboard</a>
    </div>

    <!-- Delete Button -->
    <div class="d-flex justify-content-end mb-3">
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
        Delete
      </button>
    </div>

    <!-- Edit Note Form -->
    <form action="/dashboard/item/<%= noteID %>?_method=PUT" method="POST">
      <div class="form-floating mb-4">
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Title"
          required
          value="<%= note.title %>"
        />
        <label for="title">Title</label>
      </div>

      <div class="form-floating mb-4">
        <textarea
          class="form-control"
          placeholder="Write your note..."
          id="body"
          name="body"
          style="height: 250px"
          required
        ><%= note.body %></textarea>
        <label for="body">Note</label>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
          Update Note
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title fw-bold" id="deleteModalLabel">Delete Note</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-dark">
        Are you sure you want to delete "<strong><%= note.title %></strong>"?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/dashboard/item-delete/<%= noteID %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
